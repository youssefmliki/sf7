{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Articles</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <a href="{{ path('new_article') }}" class="btn btn-primary mb-3">Ajouter un article</a>

        {% if articles %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.nom }}</td>
                            <td>{{ article.prix }} €</td>
                            <td>
                                <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-info btn-sm">Détails</a>
                                <a href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <a href="{{ path('delete_article', {'id': article.id}) }}" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article?');">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-info">
                <p>Aucun article trouvé.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}