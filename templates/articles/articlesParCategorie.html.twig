{% extends 'base.html.twig' %}

{% block title %}Liste des Articles par Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Articles par Catégorie</h1>
        
        {# Formulaire de recherche par catégorie #}
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Recherche par Catégorie</h5>
                {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                <div class="form-row align-items-end w-100">
                    <div class="col-md-8">
                        {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success w-100">Rechercher</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        {% if articles %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Catégorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.nom }}</td>
                            <td>{{ article.prix }} €</td>
                            <td>
                                {% if article.category %}
                                    {{ article.category.titre }}
                                {% else %}
                                    <span class="text-muted">Aucune catégorie</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-info btn-sm">Détails</a>
                                <a href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <a href="{{ path('delete_article', {'id': article.id}) }}" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article?');">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-info">
                <p>Aucun article trouvé.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}